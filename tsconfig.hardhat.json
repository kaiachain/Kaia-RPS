{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node", "hardhat"]
  },
  "include": [
    "hardhat.config.ts",
    "contracts/**/*",
    "scripts/**/*",
    "test/**/*",
    "typechain-types/**/*"
  ]
}
